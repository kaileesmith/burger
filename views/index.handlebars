<div class= "row">
	<div class="col-md-6">
{{!-- Not Devoured --}}
			<ul class ="notDevour">
			{{#each burgers}}
				{{#unless devoured}}
				<li class= "burgOptions1">
					{{burger_name}}
				</li>
				{{/unless}}
			{{/each}}
		</ul>
	</div>
{{!-- Devoured --}}
<div class="col-md-6">
		<ul class ="Devour">
		{{#each burgers}}
			{{#if this.devoured}}
			<li class= "burgOptions2">
				{{burger_name}}
			</li>
			{{/if}}
		{{/each}}
		</ul>
	</div>
{{!-- Form --}}
<br>
<div>
        <form id="addburger" class="button-size">
            <textarea type="text" name="burger">Add a Burger</textarea>
            <button class="btn btn-dark" type="submit">Submit!</button>
        </form>
</div>
